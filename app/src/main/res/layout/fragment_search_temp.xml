<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    android:focusable="true"
    android:padding="7dp"
    android:focusableInTouchMode="true">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="160dp"
        android:layout_height="310dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:contentPadding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="310dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="301dp"
                android:layout_weight="0.5">

                <LinearLayout

                    android:layout_width="160dp"
                    android:layout_height="307dp"
                    android:alpha="0.9"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <RelativeLayout
                        android:layout_width="160dp"
                        android:layout_height="55dp"
                        android:background="@color/whitepink"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/namemark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignParentStart="true"
                            android:layout_marginStart="16dp"
                            android:text="ชื่อร้าน"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/category"
                            android:layout_width="94dp"
                            android:layout_height="38dp"
                            android:layout_alignParentStart="true"

                            android:layout_marginStart="15dp"
                            android:layout_marginTop="30dp"
                            android:text="หมวด"
                            android:textColor="@color/black"
                            android:textSize="15sp" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="239dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nameprod"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center"
                            android:layout_marginTop="8dp"
                            android:text="ร้องเท้ารุ่น...125 ใหม่ล่าสุด"
                            android:textColor="@color/whitepink"
                            android:textSize="15sp" />

                        <ImageView

                            android:id="@+id/imgprod"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:alpha="1"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sport" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/price"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@color/black"
                            android:text="$ 15.00"
                            android:textColor="@color/whitepink" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_gravity="top|center"
                            android:layout_marginTop="2dp"
                            android:text="มีสินค้าทั้งหมด 99+ ชิ้น"
                            android:textColor="@color/whitepink"
                            android:textSize="15sp" />

                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>



</LinearLayout>